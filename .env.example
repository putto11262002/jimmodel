# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database

# Better Auth Configuration
# Generate a random 32-character secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-min-32-characters
BETTER_AUTH_TRUST_HOST=true

# Email Provider (Optional - for email verification and password reset)
# Uncomment and configure if needed:
# EMAIL_FROM=noreply@example.com
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password

# Resend Email Service for Contact Form Notifications
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxx

# Contact form notification recipients (comma-separated email addresses)
# For testing, use delivered@resend.dev (simulates successful delivery)
# For production, use actual admin email addresses
ADMIN_NOTIFICATION_EMAILS=delivered@resend.dev

# Email "From" address configuration (optional)
FROM_EMAIL=noreply@jimmodel.com
FROM_NAME=Jimmodel Contact Form
REPLY_TO_EMAIL=admin@jimmodel.com
